{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*"],
}